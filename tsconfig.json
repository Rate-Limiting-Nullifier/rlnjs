{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./lib/",
    "target": "ES2017",
    "module": "ES2020",
    "lib": [
      "es2017"
    ],
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "esModuleInterop": true,
    "declaration": true,
    "moduleResolution": "Node"
  },
  "include": [
    "src",
  ],
}